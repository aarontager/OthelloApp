<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_margin="@dimen/half_margin"
  app:cardCornerRadius="@dimen/no_margin"
  android:layout_height="wrap_content"
  app:cardBackgroundColor="@color/secondaryDarkColor">

    <ImageView
        android:id="@+id/img_tile"
        android:layout_width="@dimen/tile_size"
        android:layout_height="@dimen/tile_size"
        android:layout_gravity="center"
        android:src="@drawable/blank_tile"
        />


</com.google.android.material.card.MaterialCardView>